{% extends "base.html" %}
{% block content %}
<div class="container px-4 pt-5">
    <div class="row justify-content-center">
        <div class='col'>
            <h1 class="text-center">Current Listings at Gotham</h1>
        </div>
    </div>
    <div class="row justify-content-center">
        <div class='col-offset-4 col-4 pb-3'>
            <div class="row-4 text-center">
                <input type="search" class="form-control" name="searchquery" placeholder="Search listings by make, model, year, feature">
            </div>
            <div class="row-4 text-center pb-2">
                <input type="radio" id="search-filter1" name="search-filter" value="cars"
            checked>
                <label for="search-filter">Search cars</label>
                <input type="radio" id="search-filter2" name="search-filter" value="features">
                <label for="search-filter">Search features</label>
            </div>
            <div class="row-4 text-center">
                <button type="button" class="btn btn-primary">Search</button>
            </div>
        </div>
    </div>
    <div class="row row-cols-1 row-cols-md-2 g-4">
    {% for item in listings.example_listings %}
        {% if item %}
        <div class="col">
            <div class="card">
            <!-- will have to fill img src from Photos query-->
            <img src=".\static\img\test_car_img.jpg" class="card-img-top" alt="...">
                <div class="card-body">
                    <h5 class="card-title">{{item['year']}} {{item['make']}} {{item['model']}}</h5>
                    <!-- maybe a separate query to get FeaturesListings? and then build the list of featues from there? -->
                    <!-- description will be added in the near future -->
                    <!-- <p class="card-text">Quick Description of the car.</p> --> 
                    <p class="card-text">Here are some of the features:</p>
                    <ul>
                        <li>Feature 1</li>
                        <li>Feature 2</li>
                        <li>Feature 3</li>
                        <li>Feature 4</li>
                        <li>Feature 5</li>
                    </ul>
                    <!-- current bid info (high bid, expDate, reserve) -->
                    <div class="card-footer">
                        <p class="text-muted">Current Bid: $150000 | Ends: Feb 25th, 2021 | No Reserve</p>
                    </div>
                    <!-- user can place a bid -->
                    <form class="row" action="#">
                        <div class="col-auto">
                            <!-- maybe change placeholder value to highest bid? -->
                            <input type="number" class="form-control" name="place-bid" id="place-bid" placeholder="ex. 25000">
                        </div>
                        <div class="col-auto">
                            <input type="submit" class="btn btn-primary mb-3" value="Place Bid">
                        </div>
                    </form>
                </div>
            </div>
        </div>
        {% endif %}
    {% endfor %}
    </div>
</div>
{% endblock %}