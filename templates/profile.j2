{% extends "base.html" %}
{% block content %}
<h1 class="m-5">My Account</h1>
<h3 class="m-5">Profile Details</h3>
<div class="m-5 w-25">
    <label for="fname" class="form-label">First Name</label>
    <input type="text" class="form-control" placeholder="John" id="fname" name="fname" disabled>
</div>
<div class="m-5 w-25">
    <label for="lname" class="form-label">Last Name</label>
    <input type="text" class="form-control" placeholder="Doe" id="lname" name="lname" disabled>
</div>
<div class="m-5 w-25">
    <label for="email" class="form-label">Email</label>
    <input type="email" class="form-control" placeholder="johndoe123@gmail.com" id="email" name="email" disabled>
</div>
<div class="m-5 w-25">
    <label for="username" class="form-label">User Name</label>
    <input type="text" class="form-control" placeholder="johndoe123" id="username" name="username" disabled>
</div>
<div class="m-5 w-25">
    <label for="password" class="form-label">Password</label>
    <input type="password" class="form-control" id="password" name="password" value="password" disabled>
</div>
<div class="m-5 w-25">
    <label for="datejoined" class="form-label">Date Joined</label>
    <input type="date" class="form-control" id="datejoined" name="datejoined" value="2021-02-01" disabled>
</div>
<h3 class="m-5">Active Listings</h3>
<table class="table table-striped table-hover m-5 w-75">
    <thead>
      <tr>
        <th scope="col">#</th>
        <th scope="col">Vehicle</th>
        <th scope="col">Current Bid</th>
        <th scope="col">Reserve</th>
        <th scope="col">Expires</th>
        <th scope="col">Actions</th>
      </tr>
    </thead>
    <tbody>
      <tr>
        <th scope="row">1</th>
        <td>1971 Ford Mustang</td>
        <td>$60000</td>
        <td>$40000</td>
        <td>01-March-2021</td>
        <td><button class="btn btn-primary" type="submit">Cancel</button></td>
      </tr>
      <tr>
        <th scope="row">2</th>
        <td>1984 Porsche 944</td>
        <td>$60000</td>
        <td>None</td>
        <td>04-April-2021</td>
        <td><button class="btn btn-primary" type="submit">Cancel</button></td>
      </tr>
    </tbody>
  </table>
  <h3 class="m-5">Bid History</h3>
  <table class="table table-striped table-hover m-5 w-75">
    <thead>
      <tr>
        <th scope="col">Date Placed</th>
        <th scope="col">Vehicle</th>
        <th scope="col">Bid Amount</th>
      </tr>
    </thead>
    <tbody>
      <tr>
        <th scope="row">01-January-2021</th>
        <td>1972 Nissan Skyline</td>
        <td>$26000</td>
      </tr>
      <tr>
        <th scope="row">17-January-2021</th>
        <td>1972 Nissan Skyline</td>
        <td>$31000</td>
      </tr>
    </tbody>
  </table>
{% endblock %}