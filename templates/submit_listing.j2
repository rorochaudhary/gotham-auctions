{% extends "base.html" %}
{% block title %}<title>Submit a Listing - Gotham Auctions</title>{% endblock %}
{% block content %}
<div class="container pt-5">
    <div class="row mt-2">
        <div class="col">
            <h1>Submit a Listing</h1>
        </div>
    </div>
    <div class="row mt-2">
        <h4>Fields marked with a red asterisk (<span style='color:red;'>*</span>) are required.</h4>
    </div>
    <form action="/submit-listing" method="POST" enctype="multipart/form-data">
        <div class="row mt-5">
            <div class="col-4">
                <label for="year" class="form-label">Select your vehicle's year:<strong style='color:red;font-size:'>*</strong></label>
                <select class="form-select" aria-label="year" id="year" name="year">
                    <option>Select year</option>
                    {% for year in years%}
                    <option value="{{ year }}">{{ year }}</option>
                    {% endfor %}
                </select>
            </div>
        </div>
        <div class="row mt-2">
            <div class="col-4">
                <label for="make" class="form-label">Select your vehicle's make:<strong style='color:red;font-size:'>*</strong></label>
                <select class="form-select" aria-label="make" id="make" name="make">
                    <option selected>Select make</option>
                    {% for make in makes%}
                    <option value="{{ make }}">{{ make }}</option>
                    {% endfor %}
                </select>
            </div>
        </div>
        <div class="row mt-2">
            <div class="col-4">
                <label for="model" class="form-label">Enter your vehicle's model:<strong style='color:red;font-size:'>*</strong></label>
                <input type="text" class="form-control" id="model" name="model">
            </div>
        </div>
        <div class="row mt-2">
            <div class="col-4">
                <label for="mileage" class="form-label">Enter your vehicle's mileage:<strong style='color:red;font-size:'>*</strong></label>
                <input type="number" class="form-control" id="mileage" name="mileage">
            </div>
        </div>
        <div class="row mt-5">
            <div class="col-4">
                <label for="feature" class="form-label">Select your vehicle's features (optional):</label>
                {% for feature in features %}
                <div class="form-check">
                    <input class="form-check-input" type="checkbox" value="{{feature['carFeature']}}" id="features" name="features">
                    <label class="form-check-label" for="manual">{{feature['carFeature']}}</label>
                </div>
                {% endfor %}
            </div>
        </div>
        <div class="row mt-2">
            <div class="col-4">
                <label for="usrfeature" class="form-label">Or, enter a feature below:</label>
                <input type="text" class="form-control" id="usrfeature" name="usrfeature">
            </div>
        </div>
        <div class="row mt-5">
            <div class="col-4">
                <label for="reserve" class="form-label">Enter a reserve amount (optional):</label>
                <input type="number" class="form-control" id="reserve" name="reserve">
            </div>
        </div>
        <div class="row mt-2">
            <div class="col-4">
                <label for="expiration" class="form-label">Set an expiration date for your auction:<strong style='color:red;font-size:'>*</strong></label>
                <input type="date" class="form-control" id="expiration" name="expiration">
            </div>
        </div>
        <div class="row mt-2">
            <div class="col-4">
                <label for="photo" class="form-label">Include a photo of your vehicle (optional):</label>
                <input class="form-control" type="file" id="photo" name="photo" accept="image/*">
            </div>
        </div>
        <div class="row my-5">
            <div class="col-4">
                <button class="btn btn-primary" type="submit">Submit Listing</button>
            </div>
        </div>
    </form>
</div>
{% endblock %}